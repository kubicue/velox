<form id="myform" class="mysign-in" action="/shipments" method="post">
    <div class="col-xs-5">
  <input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">
  <div id="errors">
    <%= flash[:errors].join("<br>").html_safe if flash[:errors] %>
  </div>

  <div class="form-container">
    <h3 class="section-title">From</h3>

        <input type="text" name="fname" class="form-control" placeholder="Name" required>



        <input type="text" name="fstreet1" class="form-control" placeholder="Street Address" required>

        <input type="text" name="fstreet2" class="form-control" placeholder="APT or Floor Number" required>


        <input type="text" name="fcity" class="form-control" placeholder="City" required>



        <input type="text" name="fstate" class="form-control" placeholder="State" required>


        <input type="text" name="fzip" class="form-control" placeholder="ZIP" required>
        <input type="text" name="fphone" class="form-control" placeholder="Phone Number" required>
        <input type="text" name="femail" class="form-control" placeholder="Email" required>
  </div>
</div>

  <div class="col-xs-2">
    <p class="pack-icon">
    <img alt="Package Details" src="//easypost-static.s3.amazonaws.com/assets/transfer-0bb2412a71f8ea9e2017c110062d3e21.png">
    </p>
  </div>

   <div class="col-xs-5">
  <div class="form-container">
    <h3 class="section-title">To</h3>


        <input type="text" name="tname" class="form-control" placeholder="Name" required>



        <input type="text" name="tstreet1" class="form-control" placeholder="Street Address" required>

        <input type="text" name="tstreet2" class="form-control" placeholder="APT or Floor Number" required>

        <input type="text" name="tcity"  class="form-control" placeholder="City" required>



        <input type="text" name="tstate" class="form-control" placeholder="State" required>



        <input type="text" name="tzip" class="form-control" placeholder="ZIP" required>
        <input type="text" name="tphone" class="form-control" placeholder="Phone Number" required>
        <input type="text" name="temail" class="form-control" placeholder="Email" required>

    </div>
  </div>

      <div class="col-xs-6">
    <div class="form-container">
      <h3 class="section-title">Parcel Size</h3>



          <input type="text" name="length" class="form-control" placeholder="Length" required>



          <input type="text" name="width" class="form-control" placeholder="Width" required>



          <input type="text" name="height" class="form-control" placeholder="Height" required>



          <input type="text" name="weight" class="form-control" placeholder="Weight" required>
        </div>
        </div>

      <div class="col-xs-6">

    <div class="print-label btn pull-right">
      <button type="submit" class="btn btn-basic "><span class="glyphicon glyphicon-print"></span> Print Shipping Label</button>
  </div>
  <p class="pull-right">You will be redirected to an external link to print your label.</p>
  </div>
  </form>
